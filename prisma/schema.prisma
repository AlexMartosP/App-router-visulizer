// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Product {
  SKU         String    @id
  name        String    @db.NVarChar(50)
  description String?
  price       Float
  imageId     String
  comments    Comment[]
}

model Comment {
  id        Int     @id @default(autoincrement())
  title     String  @db.NVarChar(100)
  body      String  @db.NVarChar(600)
  product   Product @relation(fields: [productId], references: [SKU])
  productId String
}

model Message {
  id       Int      @id @default(autoincrement())
  text     String   @db.NVarChar(100)
  dateSent DateTime @default(now())
}
